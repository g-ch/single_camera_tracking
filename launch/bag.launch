<launch>

    <arg name="bagfile" default="single_camera_tracking.bag" />
    <arg name="throttle_rate" default="5.0" />

    <node pkg="rosbag" type="play" name="rosbag" args="$(arg bagfile) -r 0.3" output="screen" />
    <node pkg="topic_tools" type="throttle" name="throttle" args="messages /camera/color/image_raw $(arg throttle_rate)" output="screen" />

</launch>